pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', 
                url: 'https://github.com/KsushaGruzdeva/test-lab7.git'
            }
        }
        
        stage('Build & Test') {
            steps {
                sh 'mvn --version || echo "Maven not found, skipping build"'
                sh 'java --version || echo "Java not found"'
                sh 'mvn clean test -Dtest="*IntegrationTest" || echo "Build/test failed or Maven not installed"'
            }
            post {
                always {
                    junit 'target/surefire-reports/**/*.xml'
                }
            }
        }
        
        stage('Display Results') {
            steps {
                echo 'âœ… Build completed!'
                sh 'ls -la target/*.jar 2>/dev/null || echo "No JAR files created"'
            }
        }
    }
}